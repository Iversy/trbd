<Window x:Class="trbd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trbd"
        
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Save data" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Click="On_Save_Button_Click"/>
        <Button Content="Load data" HorizontalAlignment="Right" Margin="0,0,5,30" VerticalAlignment="Bottom" Click="On_Load_Button_Click"/>
        <TabControl x:Name="Nikita" Margin="0,10,0,55">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="MaterialGrid"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="UsageGrid"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
